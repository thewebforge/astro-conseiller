---
import Link from "./ui/Link.astro";

interface Props {
  title: string;
  description: string;
  cta: string;
  url: string;
}

const { title, description, cta, url } = Astro.props;
---

<div
  class="bg-brand-500 p-8 md:px-20 md:py-20 my-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center"
>
  <h2 class="text-canvas-50 text-3xl md:text-5xl tracking-tight m-0">
    {title}
  </h2>
  <p class="text-brand-100 mt-4 text-lg md:text-xl">
    {description}
  </p>
  <div class="flex mt-5">
    <Link href={url} style="inverted">{cta}</Link>
  </div>
</div>
