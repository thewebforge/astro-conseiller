---
import { Dropdown, DropdownItems } from "astro-navbar";

interface Props {
  title: string;
  lastItem?: boolean;
  children: {
    title: string;
    path: string;
  }[];
}

const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <Dropdown class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-links-500 hover:text-links-800">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-fit z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="p-1 lg:bg-canvas-50 lg:rounded-md lg:shadow-xl lg:border border-links-500 flex flex-col">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="py-2 px-4 lg:rounded-sm text-links-500 hover:text-links-800 hover:bg-links-500/10 transition">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </Dropdown>
</li>
