---
import siteInfo from "@data/site-info";
---
<div class="flex gap-4 items-center">
    <img class="w-10 h-10 lg:w-16 lg:h-16 rounded-full border-2 lg:border-4 border-brand-500" src={siteInfo.logo.src} alt={siteInfo.logo.alt}>
    <div class="flex flex-col items-start justify-center gap-0">
        <span class="font-bold text-lg lg:text-xl text-brand-700">{siteInfo.name}</span>
        <span class="font-light hidden lg:block text-xs text-brand-950">{siteInfo.title}</span>
    </div>
</div>